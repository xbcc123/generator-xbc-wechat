.addr-wrap {
  position: fixed;
  top: 0;
  z-index: 2;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .3);
}

.addr-con {
  /* height: 206rpx; */
  height: 100%;
}

.icon-down {
  padding-right: 40rpx;
  padding-bottom: 20rpx;
  display: flex;
  justify-content: flex-end;
}

.icon-down > image {
}

.tit-top {
  box-sizing: border-box;
  padding-top: 36rpx; 
  height: 84rpx;
  text-align: center;
  background: #fff
}

.tit-wrap {
  background: #fff;
}

.tit {
  display: flex;
  justify-content: space-between;
  margin: 0 40rpx;
  line-height: 98rpx;
  border-bottom: 1px solid #E4E4E4
}

.t-left {
  display: flex;
}

.t-left > view {
  padding: 0 20rpx;
  margin-right: 40rpx;
}

.t-left > view:first-child {
  margin-left: -20rpx; 
}

.item {
  line-height: 98rpx;
}

.list {
  padding: 0 40rpx;
  padding-bottom: 140rpx;
  background: #fff
}

.active {
  color: #21949b;
}

.active::after {
  content: '';
  display: block;
  width: 120%;
  margin-left: -10%;
  border-bottom: 2px solid #000
}

.on:active {
  color: #21949b
}
