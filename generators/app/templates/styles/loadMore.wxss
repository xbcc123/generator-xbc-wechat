/* 加载更多  */

.loadmore {
  min-height: 80rpx;
  color: #bbb;
  text-align: center;
  padding: 10rpx;
  font-size: 24rpx;
}

.loadmore > text {
  margin-top: 10rpx;
  font-size: 20rpx;
}


/* 占位图  */
.nothing {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nothing image {
  width: 345rpx;
}

.nothing > view {
  color: #b3b3b3;
}

.act:active {
  opacity: 0.6;
}


/* loading  begin*/
.loading_box {
  width: 100%;
  text-align: center;
  padding: 10rpx 0;
}

.loading_box>view {
  display: inline-block;
}

.loading_rotate_cube_parent {
  perspective: 20;
  -webkit-perspective: 20;
}

.loading_rotate_cube {
  width: 30rpx;
  height: 30rpx;
  background: #21949b;
  -webkit-animation: rotate_cube 1s ease-out infinite;
  animation: rotate_cube 1s ease-out infinite;
}

@-webkit-keyframes rotate_cube {
  0% {
    transform: rotateX(180deg);
  }

  50% {
    transform: rotateZ(180deg);
  }

  100% {
    transform: rotateY(180deg);
  }
}

@keyframes rotate_cube {
  0% {
    transform: rotateX(180deg);
  }

  50% {
    transform: rotateZ(180deg);
  }

  100% {
    transform: rotateY(180deg);
  }
}

/* loading  end*/